generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model Product {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  image String @default("default.png")
  name String
  type String
  oldPrice String?
  price String
  description String
  isSale Boolean @default(false)
  deltaSale Float @default(0)
  user  User @relation(fields: [userId], references: [id])
  userId  String @db.ObjectId
  comment Comment[]
  isVisible Boolean @default(true)
}

model User {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  avatar String @default("user-default.png")
  name String
  email String @unique
  password String
  isBanned Boolean @default(false)
  banReason String?
  banUntil DateTime?
  products Product[]
  generalComment GeneralComment[]
  comment Comment[]
  reports  Report[]
  blogPost  BlogPost[]
  orders Order[]
  role Role @default(USER)
}

enum Role{
  USER 
  ADMIN
}

model Comment {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  text String
  rating Float?
  createdAt DateTime @default(now())

  parent Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentId String? @db.ObjectId
  replies Comment[] @relation("CommentReplies")

  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String @db.ObjectId
}

model GeneralComment {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  text String
  rating Float
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model Report {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  status Status @default(OPEN)
  target Target
  targetId String? @db.ObjectId

  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

enum Status{
  OPEN
  IN_PROGRESS
  RESOLVED
  REJECTED
}

enum Target{
  PRODUCT
  USER
  COMMENT
  REPLY
  OTHER
}

model BlogPost {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  image String @default("farm.jpg")
  name String
  description String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  phoneNumber String
  status OrderStatus @default(PENDING)
  totalPrice String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  publicToken String @unique

  ownerId User @relation(fields: [productOwnerId], references: [id])
  productOwnerId String @db.ObjectId
}

enum OrderStatus{
  PENDING
  PAID
  PROCESSING
  SHIPPED
  COMPLETED
  CANCELLED
}
